<h2> Fill in the form to create a new lesson/edit lesson </h2>
<br></br>

<div class="col-md-8">
  <%= form_for lesson, html: {role: 'form'} do |f| %>
    <div class= 'form-group'>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class= 'form-group'>
      <%= f.label :body %>
      <%= f.text_area :body, :cols => 10, :rows => 10, class: 'form-control' %>
    </div>
    <div class= 'form-group'>
      <%= f.label :cost %>
      <%= f.text_field :cost, class: 'form-control' %>
    </div>
    <%= f.submit "Create/Edit Book", class: 'btn btn-primary' %>
  <% end %>
</div>