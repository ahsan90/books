<%= form_for contact, html: {role: 'form'} do |f| %>
<div class='form-group'>
  <%= f.label :email, 'Your email:' %>
  <%= f.email_field :email, autofocus: true, class: 'form-control' %>
</div>
<div class='form-group'>
  <%= f.label :body, 'Your message:' %>
  <%= f.text_area :body, :id => "message_area", :cols => 8, :rows => 8, class: 'form-control' %>
</div>
<%= f.submit "Contact us", class: 'btn btn-default' %>
<% end %>